#!/usr/bin/env bash

polybar-msg cmd quit > /dev/null

echo "---" >> /tmp/polybar_eve.log
nohup polybar eve >> /tmp/polybar_eve.log 2>&1 &
echo "$(date): polybar eve launched" >> /tmp/polybar_eve.log

# create symlink to polybar IPC channel for easier messaging
if [[ ! -f "/tmp/ipc-eve" ]]; then
  rm /tmp/ipc-eve
fi
ln -s /tmp/polybar_mqueue.$! /tmp/ipc-eve
