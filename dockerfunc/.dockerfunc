cheese(){
  del_stopped cheese

  docker run -d \
    -v /etc/localtime:/etc/localtime:ro \
    -v /tmp/.X11-unix:/tmp/.X11-unix \
    -e "DISPLAY=unix${DISPLAY}" \
    -v "${HOME}/Pictures:/root/Pictures" \
    --device /dev/video1 \
    --device /dev/snd \
    --device /dev/dri \
    --name cheese \
    ${DOCKER_REPO_PREFIX}/cheese
}

hollywood(){
  docker run --rm -it \
    --name hollywood \
    ${DOCKER_REPO_PREFIX}/hollywood
}

lynx(){
  docker run --rm -it \
    --name lynx \
    ${DOCKER_REPO_PREFIX}/lynx "$@"
  }
