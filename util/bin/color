#!/usr/bin/env bash
#
# select a color with mouse and with it
# create a small rectangle window
#
# deps: colorpicker (https://github.com/ancurio/colorpicker)
#       feh
#

dir=${HOME}/.cache/color
mkdir -p $dir

color=$(colorpicker -so)

echo $color

# option to only print code
case "$1" in
    -p|--print) ;;
    *) convert -size 100x100 xc:$color $dir/$color.png &&
       feh $dir/$color.png &
esac
