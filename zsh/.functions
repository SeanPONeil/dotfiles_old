#!/usr/bin/env bash

# Determine size of a file or total size of a directory
fs(){
  if du -b /dev/null > /dev/null 2>&1; then
    local arg=-sbh
  else
    local arg=-sh
  fi
  # shellcheck disable=SC2199
  if [[ -n "$@" ]]; then
    du $arg -- "$@"
  else
    du $arg -- .[^.]* *
  fi
}

wal(){
  if [[ $(uname) == "Darwin" ]]; then
    echo "Darwin"
  else
    echo "not darwin"
  fi
}

timeshell(){
  echo "\$SHELL: $SHELL"
  shell=${1-$SHELL}
  for i in $(seq 1 10); do /usr/bin/time $shell -i -c exit; done
}
